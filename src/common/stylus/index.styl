#app
  width: 100%
  height: 100%
  background #f5f5f5
  position: relative
  .footer_guide //aooter
    top-boder-1px(#e4e4e4)
    position: fixed
    z-index 100
    left 0
    right 0
    bottom 0
    background-color #fff
    width 100%
    height 50px
    display flex
    .guide_item
      display flex
      flex 1
      text-align: center
      flex-direction: column
      align-items center
      margin 5px
      color #999999
      &.on
        color #02a774
      span 
        font-size: 12px
        margin-top 2px
        margin-bottom 2px
        .iconfont
          font-size: 22px
  .content //每个页面的内容
    >div
    display: block
    &.on
      display block
    >section 
      .header
        background-color: #02a774
        position: fixed
        z-index: 100
        left 0
        top 0
        width 100%
        height 45px
        .header_search
          position absolute
          left 15px
          top 50%

